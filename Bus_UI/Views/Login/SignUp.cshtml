@model SignUpViewModel
@{
    ViewData["Title"] = "Detail";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/login.css">
    <title>Giriş paneli</title>
</head>

<body>

    <div class="container" id="container">
        <div class="form-container sign-up">
            <form asp-action="SignUp" asp-controller="Login" method="post">
                <h1>Qeydiyyat</h1>
              <div class="social-icons">
                    <a href="#" class="icon"><i class="fa-brands fa-google-plus-g"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-github"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-linkedin-in"></i></a>
                </div>
                <span>və ya qeydiyyat üçün e-poçtunuzdan istifadə edin</span>
                <input type="text" asp-for="FullName" placeholder="Ad Soyad">
                <input type="text" asp-for="UserName" placeholder="İstifadəçi Adı">
                <input type="password" asp-for="Password" placeholder="Şifrə">
                <input type="password" asp-for="ConfigPassword" placeholder="Şifrə Təkrar">
                <button>Qeydiyyat</button>
            </form>
        </div>
        <div class="form-container sign-in">
            <form asp-action="SignIn" asp-controller="Login" method="post">
                <h1>Giriş</h1>
                <div class="social-icons">
                    <a href="#" class="icon"><i class="fa-brands fa-google-plus-g"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-github"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-linkedin-in"></i></a>
                </div>
                <span>və ya e-poçt parolunuzu istifadə edin</span>
                <input type="text" name="UserName" placeholder="Istifadeci Adi">
                <input type="password" name="Password" class="password" placeholder="Şifrə">
                <i class="fa fa-eye show"></i>
                <a href="#">→ Şifrənizi unutmusunuz? ←</a>
                <button>Giriş</button>
            </form>
        </div>
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <h1>Xoş gəlmisiniz!</h1>
                    <p>Saytın bütün xüsusiyyətlərindən istifadə etmək üçün şəxsi məlumatlarınızı daxil edin</p>
                    <button class="hidden" id="login">Daxil Ol</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <h1>Salam!</h1>
                    <p>Saytın bütün xüsusiyyətlərindən istifadə etmək üçün şəxsi məlumatlarınızla qeydiyyatdan keçin</p>
                    <button class="hidden" id="register">Qeydiyyat</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/login.js"></script>
</body>

</html>